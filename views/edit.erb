<h3>Edit Details for <%@rider.name%></h3>

<form action="/riders/<%=@rider.id%>" method="post">
<input type="hidden" name="_method" value ="put">
  <p>  
    <label for="">Name</label>
    <input name = "name" type="text" value = "<%=@rider.name%>">
  </p>

  <p>
    <label for="">Age </label>
    <input name = "age" type="text" value = "<%=@rider.age%>">
  </p>

  <p>  
    <label for="">Boarding at</label>
    <input name = "board_at" type="text" value = "<%=@rider.board_at%>">
  </p>

  <p>  
    <label for="">Aligting at</label>
    <input name = "alight_at" type="text" value = "<%=@rider.alight_at%>">
  </p>

  <p>  
    <label for="">Image URL</label>
    <input name = "img_url" type="text" value = "<%=@rider.img_url%>">
  </p>  

  <button>Save</button>
  
</form>